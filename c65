
/*TO FIND THE MAXIMUM AND MINIMUMM NUMBER INTHE GIVEN ARRAY*/
#include<stdio.h>
#include <conio.h>
int main()
{
    int a[1000],i,n,min,max,sum,sub;
    printf("Enter size of the array : ");
    scanf("%d",&n);
    printf("Enter elements in array : ");
    for(i=0; i<n; i++)
    {
        scanf("%d",&a[i]);
    }
    min=max=a[0];
    for(i=1; i<n; i++)
    {
         if(min>a[i])
		  min=a[i];   
		   if(max<a[i])
		    max=a[i];       
    }
     printf("minimum of array is : %d",min);
          printf("\nmaximum of array is : %d",max);
          printf("%d & %d are the two numbers");
          scanf("%d %d",&max,&min);
          sum=min+max;
          printf("%d+%d=%d",min,max);        
    return 0;
}
